skill-forge-factory.ru {
  root * /srv/frontend
  file_server
  encode gzip zstd
}

api.skill-forge-factory.ru {
  @ws {
    path /ws*
    header Connection *Upgrade*
    header Upgrade websocket
  }

  reverse_proxy @ws backend:8000
  reverse_proxy / backend:8000
}
